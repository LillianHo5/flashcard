<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/question_text"
        android:hint="Input Question Here"
        android:inputType="textMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="124dp" />

    <EditText
        android:id="@+id/answer_text1"
        android:hint="Input Wrong Answer Here"
        android:inputType="textMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/question_text"
        android:layout_marginTop="50dp"
        android:ems="10"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="399dp" />

    <EditText
        android:id="@+id/answer_text2"
        android:hint="Input Wrong Answer Here"
        android:inputType="textMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answer_text1"
        android:layout_marginTop="50dp"
        android:ems="10"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="399dp" />

    <EditText
        android:id="@+id/answer_text3"
        android:hint="Input Right Answer Here"
        android:inputType="textMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answer_text2"
        android:layout_marginTop="50dp"
        android:ems="10"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="399dp" />


    <ImageView
        android:id="@+id/save_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/answer_text3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/save_button" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/answer_text3"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/cancel_button" />

</RelativeLayout>